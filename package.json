{
  "name": "assessment-platform",
  "version": "1.0.0",
  "description": "MERN Stack Assessment Platform",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"bun run server\" \"bun run client\"",
    "server": "bun start --cwd server",
    "server:dev": "bun run dev --cwd server",
    "client": "bun start --cwd client",
    "dev": "concurrently \"bun run server:dev\" \"bun run client\"",
    "install-all": "bun install && bun install --cwd server && bun install --cwd client"
  },
  "keywords": [
    "mern",
    "assessment",
    "nodejs",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
